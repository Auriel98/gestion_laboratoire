            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
            <footer class="footer bg-dark text-light text-center py-3">
                <div class="container">
                    <p>&copy; Laboratoire DJEMSY </p>
                </div>
            </footer>
        <script src="assets/js/bootstrap.min.js"></script>
